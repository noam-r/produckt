# Database
DATABASE_URL=sqlite:///./produck.db
# For production: DATABASE_URL=postgresql://postgres:password@db:5432/produck

# Redis (optional for POC - can use in-memory sessions)
REDIS_URL=redis://localhost:6379/0

# Authentication
SECRET_KEY=change-me-to-a-secure-32-char-minimum-key
SESSION_TIMEOUT_MINUTES=60
BCRYPT_ROUNDS=12

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_API_TIMEOUT=600

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
RELOAD=True
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend
VITE_API_BASE_URL=http://localhost:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_ORG_PER_MINUTE=1000

# Optional: Observability
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=produck-poc
